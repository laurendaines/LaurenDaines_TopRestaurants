@{
}

@model IEnumerable<LaurenDaines_TopRestaurants.Models.ApplicationResponse>

<!--title-->
<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<br />

<!--table to view recommendations entered by the user-->
<table id="movies">

    <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Link</th>
        <th>Favorite Dish</th>
    </tr>

    <tbody>
        @foreach (LaurenDaines_TopRestaurants.Models.ApplicationResponse x in Model)
        {
            <tr>
                <td>@x.Rank</td>
                <td>@x.Name</td>
                <td>@x.Address</td>
                <td>@x.PhoneNumber</td>
                <td>@x.Link</td>
                <td>@x.FavDish</td>
            </tr>
        }

    </tbody>

</table>